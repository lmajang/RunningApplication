<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <!--    左侧聊天内容-->
    <LinearLayout
        android:id="@+id/left_context"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:dividerPadding="10dp"
        android:orientation="horizontal">
<!--        头像-->
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp">
            <ImageView
                android:id="@+id/left_hp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img">
            </ImageView>
        </androidx.cardview.widget.CardView>
<!--        id和chatContext-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/left_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:textColor="@color/black"
                android:textSize="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/left_chat_corners"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:id="@+id/left_chat_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="textttttttttt"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <!--    右侧聊天内容-->
    <LinearLayout
        android:id="@+id/right_context"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:dividerPadding="10dp"
        android:orientation="horizontal">

        <!--        id和chatContext-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:orientation="vertical">
            <TextView
                android:id="@+id/right_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:textColor="@color/black"
                android:textSize="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/right_chat_corners"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:id="@+id/right_chat_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="textttttttttt"/>
            </LinearLayout>

        </LinearLayout>
        <!--        头像-->
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp">
            <ImageView
                android:id="@+id/right_hp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img">
            </ImageView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>