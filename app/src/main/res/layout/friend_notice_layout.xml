<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/friendlist_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/search_user">
        <!--        头像-->
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/notice_friend_hp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img">
            </ImageView>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notice_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="test"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/notice_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test"
                    android:textSize="15dp"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/notice_yes"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/icon_yes"
                android:background="@drawable/notice_list_btn"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/notice_no"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/icon_no"
                android:background="@drawable/notice_list_btn"
                android:paddingTop="10dp"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>